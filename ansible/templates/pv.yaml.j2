apiVersion: v1
kind: PersistentVolume
metadata:
  name: php-storage-{{ service_name }}
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: {{ storage_size | default('4Gi') }}
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  hostPath:
    path: "{{ service_dir }}/storage"